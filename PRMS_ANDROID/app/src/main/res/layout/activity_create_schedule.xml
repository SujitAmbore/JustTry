<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".schedule.android.ui.MaintainScheduleScreen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#76939393"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Enter RadioProgram" />

        <EditText
            android:id="@+id/edittext_radioprogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Enter Presenter" />

        <EditText
            android:id="@+id/edittext_presenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Enter Producer" />

        <EditText
            android:id="@+id/edittext_producer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="Date/Time:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/schedule_start_date"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:focusable="false"
                android:hint="dd:mm:yy"
                android:textColor="#ffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="Duration:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/schedule_duration"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:ems="10"
                android:focusable="false"
                android:hint="hh:mm:ss"
                android:textColor="#ffffff" />

    </TableLayout>

</RelativeLayout>