<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_us_list"
    android:padding="10dp"
    android:background="@drawable/head"
    android:orientation="vertical"
    tools:context="sg.edu.nus.iss.phoenix.user.android.ui.MaintainUserScreen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#76939393">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:text="Name" />
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:hint="Enter user name"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Email" />

    <EditText
        android:id="@+id/user_email_id"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:hint="Enter email id"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Joining Date" />

    <EditText
        android:id="@+id/user_joining_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dd:mm:yy" />

    <Button
        android:id="@+id/btn_Create_Role"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Create user"
        android:padding="15dp"
        android:textColor="#d52d2c2c"
        android:layout_centerHorizontal="true" />
    </TableLayout>

</LinearLayout>
