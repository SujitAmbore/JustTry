<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="sg.edu.nus.iss.phoenix.authenticate.android.ui.LoginScreen">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="430dp"
        android:layout_height="700dp"
        android:layout_x="-10dp"
        android:layout_y="-74dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_x="-2dp"
        android:layout_y="99dp"

        android:layout_marginBottom="6dp"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/videoView" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="205dp"
        android:textAlignment="center"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="#32ffffff"
        android:textColor="#ffffff"
        android:textColorHint="#b2dad8d8"
        android:layout_above="@+id/btnLogin"
        android:layout_alignEnd="@+id/username" />

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="#32ffffff"
        android:textColor="#ffffff"
        android:textColorHint="#b2dad8d8"
        android:hint="@string/hint_username"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="216dp"
        android:text="Phoenix"
        android:textAlignment="center"
        android:textColor="#b2dad8d8"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/username"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="0dp"
        android:layout_y="580dp"
        android:background="#af236056"
        android:textSize="20dp"
        android:text="@string/btn_login"
        android:textColor="#94ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/videoView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_error_message_display"
        android:textSize ="22sp"
        android:padding="16dp"
        android:text="@string/error_msg"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />


</RelativeLayout>
